#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üîç Running ultra-simple pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

print_status() {
    echo -e "${BLUE}üìù $1${NC}"
}

print_success() {
    echo -e "${GREEN}‚úÖ $1${NC}"
}

print_error() {
    echo -e "${RED}‚ùå $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}‚ö†Ô∏è  $1${NC}"
}

# 1. Check if we can at least compile the main application (skip tests)
print_status "Checking basic compilation..."
npx next build --no-lint
if [ $? -ne 0 ]; then
    print_error "Basic compilation failed. Please fix critical errors before committing."
    exit 1
fi
print_success "Basic compilation passed"

print_success "Ultra-simple pre-commit checks passed! Proceeding with commit..."
print_warning "Note: This is a minimal check. Consider fixing TypeScript and linting issues when convenient."
