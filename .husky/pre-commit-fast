#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running fast pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

print_status() {
    echo -e "${BLUE}📝 $1${NC}"
}

print_success() {
    echo -e "${GREEN}✅ $1${NC}"
}

print_error() {
    echo -e "${RED}❌ $1${NC}"
}

# 1. Type checking (fast)
print_status "Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
    print_error "Type checking failed. Please fix TypeScript errors before committing."
    exit 1
fi
print_success "Type checking passed"

# 2. Linting (fast)
print_status "Linting code..."
npm run lint
if [ $? -ne 0 ]; then
    print_error "Linting failed. Please fix linting errors before committing."
    exit 1
fi
print_success "Linting passed"

# 3. Unit tests (only changed files)
print_status "Running unit tests for changed files..."
npm run test:ci
if [ $? -ne 0 ]; then
    print_error "Unit tests failed. Please fix failing tests before committing."
    exit 1
fi
print_success "Unit tests passed"

# 4. Accessibility tests (fast)
print_status "Running accessibility tests..."
npm run test:a11y
if [ $? -ne 0 ]; then
    print_error "Accessibility tests failed. Please fix accessibility issues before committing."
    exit 1
fi
print_success "Accessibility tests passed"

print_success "All fast pre-commit checks passed! Proceeding with commit..."
